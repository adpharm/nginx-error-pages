---
import Base from "../layouts/base.astro";

interface Props {
  frontmatter: {
    title: string;
    code: number;
    headline: string;
    message: string;
  };
}

const { frontmatter } = Astro.props;
const { title, code, headline, message } = frontmatter;
---

<Base title={title}>
  <div class="flex flex-col min-h-screen dark:bg-gray-800 dark:text-white">
    <nav class="h-20 sm:h-0"></nav>
    <div
      class="flex-1 flex items-start sm:items-center justify-start text-center sm:text-left"
    >
      <div class="flex-1 max-w-3xl mx-auto px-4 xl:px-12 grid gap-4">
        <p
          class="text-lg sm:text-2xl font-semibold text-gray-400 dark:text-gray-600 uppercase"
        >
          ({code})
        </p>
        <h1 class="text-2xl sm:text-4xl font-medium">
          {headline}
        </h1>
        <p class="text-gray-500 dark:text-gray-400 sm:text-lg">
          {message}
        </p>

        <div class="pt-2">
          <button
            class="bg-cyan-500 dark:bg-sky-300 text-white dark:text-sky-900 font-medium rounded px-4 py-1.5"
            onclick="location.reload()"
          >
            Refresh
          </button>
        </div>
      </div>
    </div>

    <footer class="sm:h-40"></footer>
  </div>
</Base>
